[general]
listen_addr = "0.0.0.0:3535"
pipe_file = "/var/volatile/system-api.fifo"
pprof = false
log_json = true
log_debug = false

# HTTP Basic Auth
basic_auth_secret_path = "/etc/system-api/basic-auth-secret"
basic_auth_secret_salt = "{{system_api.basic_auth_secret_salt}}"

# HTTP server timeouts
# http_read_timeout_ms = 2500
# http_write_timeout_ms = 2500

[actions]
reboot = "reboot"
rbuilder_restart = "/etc/init.d/rbuilder restart"
rbuilder_stop = "/etc/init.d/rbuilder stop"

[file_uploads]
ofac_blocklist = "/persistent/rbuilder/rbuilder.blocklist.json"
